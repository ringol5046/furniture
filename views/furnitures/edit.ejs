<% include ../partials/header %>
  <div class="row">
    <h1 style="text-align:center;">Edit
      <%= furniture.name %>
    </h1>
    <div style="width:30%; margin: 25px auto">
      <form action="/furnitures/<%= furniture._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" value="<%= furniture.name %>" name="furniture[name]">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="<%= furniture.image %>" name="furniture[image]">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" value="<%= furniture.description %>" name="furniture[description]">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" value="<%= furniture.price %>" name="furniture[price]" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/furnitures">Go Back</a>
    </div>
  </div>

  <% include ../partials/footer %>